#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
    for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

xrandr --dpi 84
(sleep 1 && xcompmgr) &

autostart="dunst pipewire ipcbar"

for program in $autostart; do
	pidof -sx "$program" || "$program" &
done >/dev/null 2>&1

station portable
risgrot -s "$HOME/pictures/wallpapers/landskap-med-vandringsmann.jpg" -t gruvbox -q &

while type dwm >/dev/null ; do dwm && continue || break ;done

